
@model Inei.ViewModel.AddEditPersonaNaturalViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>UPC INEI</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="@Url.Content("~/Content/css/bootstrap.css")" rel="stylesheet" media="screen">
    <link href="@Url.Content("~/Content/css/thin-admin.css")" rel="stylesheet" media="screen">
    <link href="@Url.Content("~/Content/css/font-awesome.css")" rel="stylesheet" media="screen">
    <link href="@Url.Content("~/Content/style/style.css")" rel="stylesheet">

</head>
<body>
    <div class="login-logo">
        <h3 width="147" height="33"> UPC INEI</h3>
    </div>
    <div class="widget">
        <div class="login-content">
            <div class="widget-content" style="padding-bottom:0;">

                <h3 class="form-title">Registro</h3>

                @if (TempData["Mensaje"] != null)
                {
                    <div class="alert alert-warning fade in">
                        <button type="button" class="close close-sm" data-dismiss="alert"> <i class="icon-remove"></i> </button>
                        <strong>Advertencia!</strong> @TempData["Mensaje"].ToString()
                    </div>
                }
                <form role="form" method="post" action="@Url.Action("RegistrarPersona")">
                    <fieldset>
                <h3> Para realizar su registro, llene los siguientes datos</h3>
                        <div class="form-group no-margin">
                            <label>DNI</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">
                                    <i class="icon-user"></i>
                                </span>
                                <!--<input placeholder="Tu DNI" class="form-control input-lg">-->
                                @Html.TextBoxFor(X => X.DNI, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.DNI)
                            </div>
                        </div>

                        <div class="form-group no-margin">
                            <label>Nombre</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">
                                    <i class="icon-user"></i>
                                </span>
                                  @Html.TextBoxFor(X => X.Nombre, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Nombre)
                            </div>
                        </div>

                        <div class="form-group no-margin">
                            <label>Apellido Paterno</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">
                                    <i class="icon-user"></i>
                                </span>
                                @Html.TextBoxFor(X => X.ApellidoPaterno, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ApellidoPaterno)
                            </div>
                        </div>

                        <div class="form-group no-margin">
                            <label>Apellido Materno</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">
                                    <i class="icon-user"></i>
                                </span>
                                @Html.TextBoxFor(X => X.ApellidoMaterno, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ApellidoMaterno)
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">
                                    <i class="icon-lock"></i>
                                </span>
                                @Html.PasswordFor(X => X.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Password)
                            </div>
                        </div>


                    </fieldset>
                    <button class="btn btn-warning pull-right" type="submit">
                        Ingresar <i class="m-icon-swapright m-icon-white"></i>
                    </button>
                    <div class="form-actions">
                      
                    </div>
                </form>
            </div>

        </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="@Url.Content("~/Content/js/jquery.js")"></script>
    <script src="@Url.Content("~/Content/js/bootstrap.min.js")"></script>
</body>
</html>
